<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleMauiEmbedIOServerApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Select the button to get the location from the API"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="Defines App's function"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Gets location from API on button click"
                Clicked="OnCounterClickedAsync"
                HorizontalOptions="Center" />

            <Label
                x:Name="LocationInfoLabel"
                SemanticProperties.HeadingLevel="Level3"
                FontSize="19"
                HorizontalOptions="Center"
                Margin="0,20,0,0" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
